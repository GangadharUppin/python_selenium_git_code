pipeline {
    agent any
       //agent { label 'ubuntu' }  // Label of your EC2 agent

    environment {
        REPO_URL = 'https://github.com/GangadharUppin/python_selenium_git_code.git'
    }

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    if (isUnix()) {
                        // For Linux/Unix-based agents
                        sh "git clone ${REPO_URL}"
                    } else {
                        // For Windows agents
                        bat "git clone ${REPO_URL}"
                    }
                }
            }
        }

        stage('Print Message') {
            steps {
                echo "Repository cloned successfully!"
            }
        }
    }
}
