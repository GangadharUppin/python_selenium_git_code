pipeline {
    agent { label 'ubuntu' }

    environment {
        IMAGE_NAME = "python-selenium-test"
    }

    parameters {
        string(name: 'suite', defaultValue: 'functional', description: 'Test Suite to run')
    }

    stages {
        stage('Clone Repo') {
            steps {
                git url: 'https://github.com/GangadharUppin/python_selenium_git_code.git', branch: 'master'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    docker build -t ${IMAGE_NAME} -f integrate_ci_cd/Dockerfile .
                '''
            }
        }

        stage('Run Tests Using Docker (on EC2 host)') {
            steps {
                sh '''
                     docker run --rm -v /dev/shm:/dev/shm ${IMAGE_NAME} pytest tests -vm ${params.suite}
                '''
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'screenshots/*.png', allowEmptyArchive: true
        }
    }
}
