pipeline {
       agent { label 'ubuntu' }  // Label of your EC2 agent

    environment {
        REPO_URL = 'https://github.com/GangadharUppin/python_selenium_git_code.git'
        IMAGE_NAME = "my-python-test-image"
    }

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    if (isUnix()) {
                        // For Linux/Unix-based agents
                        sh "rm -rf python_selenium_git_code"
                        sh "git clone ${REPO_URL}"
                    } else {
                        // For Windows agents
                        bat "git clone ${REPO_URL}"
                    }
                }
            }
        }
        stage('Build and Run Docker') {
            steps {
            script {
                echo "Build and Run Docker."
                def testCommand = "/venv/bin/pytest -v tests -m ${params.test_marker} --maxfail=1 --disable-warnings --tb=short"
                if (isUnix()) {
                    // For Linux/macOS
                    sh "docker build -t ${IMAGE_NAME} -f integrate_ci_cd/Dockerfile ."
                    sh "docker run --rm ${IMAGE_NAME}"
                } else {
                    // For Windows
                    echo "Start of building docker image."
                    bat "docker build --no-cache -t ${IMAGE_NAME}  -f integrate_ci_cd/Dockerfile ."
                    // bat "docker build -t ${IMAGE_NAME} -f Docker/Dockerfile ."
                    echo "Docker image is built."
    //                      bat "docker run --rm ${IMAGE_NAME}"
                    bat "docker run --rm ${IMAGE_NAME} ${testCommand}"
                    echo "End of building docker image."
                }
            }
        }
    }

        stage('Print Message') {
            steps {
                echo "Repository cloned successfully!"
            }
        }
    }
}
