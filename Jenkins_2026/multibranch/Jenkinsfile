pipeline {
    agent any

    parameters {
        string(
            name: 'suite',
            defaultValue: 'sanity',
            description: 'Pytest marker to run'
        )
    }

    stages {

        stage('Clean Workspace') {
            steps {
                deleteDir()
            }
        }

        stage('Checkout Code') {
            steps {
                // Multibranch pipeline automatically checks out
                // the correct branch or PR merge commit
                checkout scm
            }
        }

        stage('Setup Python Virtual Environment') {
            steps {
                bat '''
                python --version
                python -m venv venv
                venv\\Scripts\\pip install --upgrade pip
                venv\\Scripts\\pip install -r requirements.txt
                '''
            }
        }

        stage('Run Pytest') {
            steps {
                script {
                    def marker = params.suite?.trim()
                    if (marker) {
                        bat """
                        venv\\Scripts\\python.exe -m pytest -v -m ${marker}
                        """
                    } else {
                        bat """
                        venv\\Scripts\\python.exe -m pytest -v
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            echo "Build completed for branch: ${env.BRANCH_NAME}"
        }
        success {
            echo "✅ Tests passed"
        }
        failure {
            echo "❌ Tests failed"
        }
    }
}

